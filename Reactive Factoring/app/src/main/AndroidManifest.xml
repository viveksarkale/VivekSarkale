<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="chat.application">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".MyAppication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait"
            android:launchMode="singleTask">

        </activity>
        <activity
            android:name=".activity.ComposeActivity"
            android:label="@string/tCompose"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".activity.SettingActivity"
            android:label="@string/tSetting"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.ReadMessageActivity"
            android:label="@string/tReadMessage"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.ContactActivity"
            android:label="@string/tContact"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".activity.AddContactActivity"
            android:label="@string/tAddContact"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait"/><![CDATA[
        >
        ]]>
        <activity android:name=".activity.LoginActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
    </application>

</manifest>